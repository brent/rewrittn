<li class="feed-item feed-rewrite-create" id=<%= activity.trackable_id %>>

  <small class="timestamp"><%= time_ago_in_words(activity.created_at) %> ago</small>
  <p><%= link_to User.find(activity.owner_id).name, User.find(activity.owner_id), class: "username" %> <%= rewrite_action_word %> a rewrite </p>

  <h3 class="rewrite-title"><%= link_to activity.parameters[:rewrite_title], rewrite_path(activity.trackable_id) %></h3>

  <div class="snippet-container">
    <p class="seeded-by">seeded by:</p>
    <p class="snippet"><%= link_to activity.parameters[:snippet_content], snippet_path(activity.trackable_id) %></p>
  </div>

</li>
