<li class="reading-list-item" id="rewrite-<%= "#{rewrite.id}" %>">
  <h2 class="reading-list-item-title"><%= link_to rewrite.title, rewrite %></h2>

  <% if rewrite.tag_list.count > 0 %>
    <ul class="reading-list-item-tags clearfix">
      <% rewrite.tag_list.each do |tag| %>
        <li class="reading-list-item-tags-tag"><%= tag %></li>
      <% end %>
    </ul>
  <% end %>

  <p class="reading-list-item-meta">
    <span class="reading-list-item-stars"><%= pluralize(rewrite.stars, 'star') %></span> | <span class="reading-list-item-byline">written <%= written_by(rewrite) %></span>
  </p>
</li>
