<% provide(:title, @user.name) %>

<div class="user-info">
  <h2><%= @user.name %></h2>
  <%= render 'shared/stats' %>
  <%= render 'follow_form' if signed_in? %>
</div>

<div class="main-col">
  <% if @user.snippets.any? %>
    <h3>Snippets (<%= @user.snippets.count %>)</h3>
    <ol class="snippets">
      <%= render @snippets %>
    </ol>
    <%= will_paginate @snippets %>
  <% else %>
    <p>You don't have any snippets yet. Why not <%= link_to "create one", new_snippet_path %>?</p>
  <% end %>
</div>
