<% provide(:title, "Write on, writer") %>

<%= form_for @rewrite do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.text_area :content_before_snippet %>

  <p class="snippet"><%= @snippet.content %></p>
  <%= f.hidden_field :snippet_id, value: @snippet.id %>

  <%= f.text_area :content_after_snippet %>

  <%= f.button "publish", class: "btn" %>
<% end %>
