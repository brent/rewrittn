@import url('base.css.less');

.site-header {
  color: @dark-gray;
  font-weight: bold;
  height: 50px;
  padding: 10px 0;
  width: 100%;

  .logo {

    a {
      color: @link-color;
      display: block;
      font: 22px Lora, serif;
      font-style: italic;
      font-weight: bold;
      height: 35px;
    }
  }

  a {
    color: inherit;
    text-decoration: none;
  }
}

.nav {
  padding-top: 8px;
}

.nav > li {
  color: #777;
  float: left;
  margin-right: 10px;
  font-family: @secondary-font-family;
  font-weight: normal;
}

.nav li a:hover {
  color: @link-color;
}

.nav > li:last-child {
  margin-right: 0px;
}
