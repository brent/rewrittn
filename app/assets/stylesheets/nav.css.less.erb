@import url('base.css.less');

.site-header {
  background: #222;
  border-bottom: 1px solid #eee;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20px;
  padding: 10px 0;
  width: 100%;

  .logo {

    a {
      background: url(<%= image_path 'rewrittn-logo.svg' %>) top left no-repeat;
      color: #8b7cea;
      display: block;
      font: 22px Lora, serif;
      font-style: italic;
      font-weight: bold;
      height: 35px;
      padding-left: 35px;
    }
  }

  a {
    color: inherit;
    text-decoration: none;
  }
}

.nav {
  padding-top: 8px;
}

.nav > li {
  float: left;
  margin-right: 10px;
}

.nav > li:last-child {
  margin-right: 0px;
}
