@import url('base.css.less');

.user-meta {
  color: #aaa;
}

.rewrite-single {

  .cover-image-full {
    background: linear-gradient(to bottom, rgba(102,0,255,0.33), rgba(102,0,255,0.33)),
                url('http://bit.ly/1kFOaCQ') no-repeat center;
    background-size: cover;
    min-height: 600px;
    width: 100%;
  }

  .rewrite-meta {
    color: #fff;
    margin: -18.75em auto 0;
    padding: 1.875em;
  }

  .rewrite-title-container {
    max-height: 150px;
  }

  .rewrite-title {
    color: #fff;
    font: 4.75em @secondary-font-family;
    font-weight: bold;
    line-height: 1.15em;
    text-shadow: 0 1px 5px rgba(0,0,0,0.5);
  }

  .rewrite-content {
    background: white;
    font-family: @primary-font-family;
    margin: 0 auto;
    padding: 1.875em;
  }

  .rewrite-snippet {
    margin-bottom: 0.9375em;
  }

  .rewrite-snippet .snippet-meta {
    font-size: .66em;
    font-style: italic;
    line-height: normal;
    margin-left: 1.25em;
    opacity: 0.33;
    transition: opacity 500ms;
  }

  .rewrite-snippet:hover .snippet-meta {
    opacity: 1;
    transition: opacity 500ms;
  }

  .rewrite-snippet, .rewrite p {
    font-family: inherit;
    font-size: 1.5em;
    font-style: normal;
    line-height: @line-height;
  }

  .rewrite p {
    margin-bottom: 1.875em;
  }

  .rewrite-after p:last-child {
    margin-bottom: 0;
  }

  .rewrite {
    color: @dark-gray;
  }
}

.rewrite-new {
  &.container {
    margin-top: 30px;
  }

  .rewrite-form {
    input, textarea {
      border: none;
      border-radius: 0;
      font-family: @primary-font-family;
      outline: none;
      font-size: 1.5em;
      padding: 10px 0;
    }
  }

  .snippet {
    font-family: @primary-font-family;
    font-size: 1.5em;
    line-height: 1.25em;
    margin: 30px 0;
  }
}
